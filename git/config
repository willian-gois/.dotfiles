[user]
	name = Willian Gois
	email = willian2o12@hotmail.com

[alias]
        a = add -p
        st = status -sb
        ci = commit
        mci = log --pretty=format:'%ad - %s' --abbrev-commit --author=RoadHouse --date=short
        b = branch
        ch = checkout
        com = checkout master
        cot = checkout --track
        s = stash
        sp = stash pop
        sl = stash list
        df = diff --word-diff
        who = shortlog -s --
        ps = push
        lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        plr = pull --rebase
        rebm = rebase master
        rec = rebase --continue
        rea = rebase --abort
        res = rebase --skip

[color]
        ui = auto

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[core]
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
        pager = less -r

[help]
        autocorrect = 1

[apply]
        whitespace = fix